{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "masterIssue": true,
  "rangeStrategy": "bump",
  "separateMinorPatch": true,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 10,
  "enabledManagers": [
    "npm"
  ],
  "timezone": "Europe/Paris",
  "schedule": [
    "after 10pm and before 7:00am"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "schedule": [
      "at any time"
    ],
    "prPriority": 10
  },
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true,
      "labels": [
        "habx-automerge"
      ]
    },
    {
      "updateTypes": [
        "patch"
      ],
      "depTypeList": [
        "dependencies",
        "peerDependencies"
      ],
      "automerge": true,
      "labels": [
        "habx-automerge"
      ]
    },
    {
      "packagePatterns": [
        "^@habx/"
      ],
      "schedule": [
        "at any time"
      ],
      "prPriority": 5
    },
    {
      "packagePatterns": [
        "^@habx/"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "labels": [
        "habx-automerge"
      ]
    },
    {
      "packageNames": [
        "@habx/lib-client-housing-2d",
        "@habx/lib-housing-mosaic"
      ],
      "groupName": "mosaic changes"
    },
    {
      "packageNames": [
        "three",
        "react-scripts"
      ],
      "automerge": false,
      "stabilityDays": 7
    },
    {
      "packageNames": [
        "lodash",
        "typescript",
        "lint-staged"
      ],
      "updateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "prPriority": -5,
      "labels": [
        "habx-automerge"
      ]
    },
    {
      "packagePatterns": [
        "^@sentry/",
        "^@types/"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "prPriority": -10,
      "labels": [
        "habx-automerge"
      ]
    }
  ]
}
